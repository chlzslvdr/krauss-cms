{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@contents/*": ["contents/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@commons/*": ["commons/*"],
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@lib/*": ["lib/*"]
    },
    "allowJs": true,
    "incremental": true,
    "module": "esnext"
  },
  "include": ["global.d.ts", "pages/**/*", "components/**/*", "commons/**/*"],
  "exclude": ["node_modules"]
}
